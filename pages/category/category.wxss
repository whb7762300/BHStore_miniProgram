.container {
  background-color: white;
}
.container .content {
  width: 100%;
  height: calc(100vh - 90rpx);
  display: flex;
}
.container .content .left {
  width: 30%;
}
.container .content .left .leftContent {
  width: 100%;
}
.container .content .left .leftContent .item {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: black;
}
.container .content .left .leftContent .item.active {
  border-left: 6rpx solid #ff2d4a;
  color: #ff2d4a;
}
.container .content .right {
  width: 70%;
}
.container .content .right .rightContent {
  width: 100%;
}
.container .content .right .rightContent > view .title {
  text-align: center;
  padding: 10rpx 0;
}
.container .content .right .rightContent > view .menu {
  display: flex;
  flex-wrap: wrap;
}
.container .content .right .rightContent > view .menu > navigator {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 33.33%;
  padding: 10rpx 30rpx;
}
.container .content .right .rightContent > view .menu > navigator > image {
  width: 100%;
}
.container .content .right .rightContent > view .menu > navigator > view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
